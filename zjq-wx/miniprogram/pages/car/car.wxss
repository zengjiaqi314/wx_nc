/* pages/car/car.wxss */
.f{
  display: flex;
  align-items: center;
  padding: 15rpx 30rpx;
  margin-bottom: 5rpx;
  background: #fff;
  justify-content: space-between;
}
.f image{
  width: 30rpx;
  height: 30rpx;
  vertical-align:bottom;
}
.f text{
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
  background: #f70;
  padding: 10rpx 50rpx;
  border-radius: 8rpx;
}
.f h1{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #777
}
.van-tabs--line .van-tabs__wrap {
  height: var(--tabs-line-height,70rpx) !important;
}
.van-tab {
  font-size: var(--tab-font-size,24rpx) !important;
  line-height: var(--tabs-line-height,70rpx) !important;
}
.van-tab--active {
  color: var(--tab-active-text-color,#f70) !important;
}

.f1{margin-block-start: 20rpx;}


/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #f70;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 30rpx;
  color: #fff;
}

.left{
  display: flex;
  align-items: center
}
.f1 image{
  width: 130rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.leftz view{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 400
}
.leftz h2{
  font-size: 30rpx;
  font-weight: 400;
  color: #f70
}
.leftz h4{
  margin-right: 10rpx;
  font-size: 20rpx;
  border:1rpx solid #f70;
  color: #f70
}
.right{
  display: flex;
}

.right h3{
  width: 45rpx;
  height: 45rpx;
  font-size: 26rpx;
  margin: 0 10rpx;
  text-align: center;
  line-height: 45rpx;
  border-radius: 5rpx;
  background: #eee;
}
.tk1{
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
  margin: 30rpx 0
}
.tk2{
  display: flex;
}
.tk2 button{
  font-size: 30rpx;
}
.btn1{
  color: #777;
  border-right: 1rpx solid #eee;
}
.btn2{color: #f70;}
.js{
  position: fixed;
  bottom: 0;left: 0;
  width: 96%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 4%
}
.js view{
  display: flex;
  align-items: center
}
.js text{
  padding-left: 20rpx;
}
.js h5{
  margin-right: 40rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #f70
}
.js h6{
  font-size: 30rpx;
  color: #fff;
  background: #f70;
  padding:20rpx 40rpx;
}
