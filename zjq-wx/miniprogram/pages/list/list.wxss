.lhead image{
  width: 100%;
  height: 300rpx;
  margin-bottom: 15rpx;
}
.fz{
  background: #fff;
  margin-bottom: 300rpx;
}
.ft{
  text-align: center;
  font-weight:700;
  font-size: 38rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ddd;
}
.f{
  display: flex;
  align-items:flex-end;
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.f image{
  width: 200rpx;
  height: 200rpx;
}
.f>view>view{
  width: 320rpx;
  margin-bottom: 20rpx
}
.f h1{
  font-size: 36rpx;
  font-weight:400; 
}
.f h2{
  font-size: 32rpx;
  font-weight:700;
  color: #f23
}
.f h3{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #777
}
.f h4{
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight:400;
  color: #ddd;
  background: #f73;
